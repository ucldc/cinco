<div id="facet-digital_content" class="<%='facet-limit-active' if @facet_field.active? %> mb-4">
    <div class="card-body d-flex align-items-center justify-content-between">
        <div class="form-check form-switch">
        <a href="<%= facet_toggle_url %>">
            <% if @facet_field.active? %>
                <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" checked>
                <label class="form-check-label" for="flexSwitchCheckChecked">View results with digital items</label>
            <% else %>
                <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">View results with digital items</label>
            <% end %>
        </a>
      </div>
    </div>
</div>
<h3 class="h5">Filter</h3>
