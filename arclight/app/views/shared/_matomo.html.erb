
<% if Rails.application.config.respond_to?(:matomo_site_id) && Rails.application.config.matomo_site_id.present? %>
<script>
    console.log("Matomo tracking enabled with site ID: <%= Rails.application.config.matomo_site_id %>");
    var _paq = window._paq = window._paq || [];
    (function() {
        var u="//matomo.cdlib.org/";
        _paq.push(['setTrackerUrl', u+'matomo.php']);
        _paq.push(['setSiteId', '<%= Rails.application.config.matomo_site_id %>']); // Replace with your actual site ID
        var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
        g.async=true; g.src=u+'matomo.js'; s.parentNode.insertBefore(g,s);
    })();
</script>
<% end %>
