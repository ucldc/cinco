<%= form_with scope: :contact_form, url: contact_form_index_path, method: :post, local: true, class: "container" do |form| %>
  <div class="form-group">
    <%= form.label :subject %>
    <%= form.text_field :subject, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <%= form.label :message %>
    <%= form.text_area :message, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <%= form.label "How would you best describe yourself?" %>
    <%= form.select :user_category, [["K-12 teacher or librarian", "K12T"], ["K-12 student", "K12S"],
      ["College student", "CLG"], ["Graduate student", "GRAD"], ["Faculty or academic researcher", "FAC"],
      ["Archivist or librarian", "LIB"], ["Genealogist or family researcher", "GENE"], ["Other", "OTHER"]],
      class: "form-control", required: true
    %>
  </div>
  <%# TODO: write javascript to make field below visible only if user_category OTHER is selected %>
  <div class="form-group">
    <%= form.label "Tell us in your own words" %>
    <%= form.text_field :user_category_other_description, class: "form-control" %>
  </div>
  <%# TODO: insert recaptcha %>
  <div>
        <p>[ RECAPTCHA HERE ]</p>
  </div>
  <p>Optional: (If you would like a response to your feedback, please enter the following.)</p>
  <div class="form-group">
    <%= form.label "Name" %>
    <%= form.text_field :sender_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label "Email" %>
    <%= form.email_field :sender_email, class: "form-control" %>
  </div>
  <%= form.submit "Submit", class: "btn btn-primary" %>
<% end %>
