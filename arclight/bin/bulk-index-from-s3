#!/bin/bash -e

# This script takes as an argument the ID of a finding aid, downloads
# the EAD file from S3 to the local filesystem, and then runs the traject
# process to index the file into Solr.

# check that we have an s3 key
if [ -z "$1" ]; then
  echo "Usage: $0 <s3_prefix>"
  exit 1
fi

# check that the S3_BUCKET environment variable is set
if [ -z "$S3_BUCKET" ]; then
  echo "The S3_BUCKET environment variable must be set"
  exit 1
fi

# check that the SOLR_WRITER environment variable is set
if [ -z "$SOLR_WRITER" ]; then
  echo "The SOLR_WRITER environment variable must be set"
  exit 1
fi

# if CINCO_MINIO_ENDPOINT is set, configure aws cli to use local minio endpoint
if [ -n "$CINCO_MINIO_ENDPOINT" ]; then
  echo "Using Minio endpoint: $CINCO_MINIO_ENDPOINT"
  export AWS_ACCESS_KEY_ID="minioadmin"
  export AWS_SECRET_ACCESS_KEY="minioadmin"
  export AWS_DEFAULT_REGION="us-east-1"
  S3_CLI_ENDPOINT="--endpoint-url $CINCO_MINIO_ENDPOINT"
else
  S3_CLI_ENDPOINT=""
fi

echo "Downloading Contents of S3 Prefix $1 to /tmp/$1"
aws s3 sync s3://$S3_BUCKET/media/$1 /tmp/$1 $S3_CLI_ENDPOINT

# Initialize array for cache invalidation paths
INVALIDATION_PATHS=()

# for every folder in /tmp/$1,
#  1. source /tmp/$1/<folder>/indexing_env.sh &
#  2. run traject command referenceing /tmp/$1/<folder>/finding-aid.xml

for folder in /tmp/$1/*; do
  if [ -d "$folder" ]; then
    echo "Running indexing for $folder"
    source $folder/indexing_env.sh
    # run traject command referenceing /tmp/$1/<folder>/finding-aid.xml
    echo "Indexing Finding Aid: $FINDING_AID_ID, Repository Code: $REPOSITORY_ID, Finding Aid ARK: $FINDING_AID_ARK, Preview: $PREVIEW"
    bundle exec traject -I lib/ \
        -u $SOLR_WRITER \
        -i xml -c lib/arclight/traject/ead2_config.rb \
        $folder/finding-aid.xml \
        -s ark=$FINDING_AID_ARK \
        -s eadid="$EADID" \
        -s preview=$PREVIEW &
    echo "Clearing environment for $folder"

    # Add path to invalidation list
    INVALIDATION_PATHS+=("/findaid/$FINDING_AID_ARK*")
    echo "Added to invalidation list: /findaid/$FINDING_AID_ARK*"

    unset REPOSITORY_ID
    unset FINDING_AID_ID
    unset FINDING_AID_ARK
    unset EADID
    unset PREVIEW
    echo "Finished indexing $FINDING_AID_ID"
  fi
done
wait

# Run cache invalidation once for all paths: "findaid/<ark>*""
if [ ${#INVALIDATION_PATHS[@]} -gt 0 ] && [ ${#INVALIDATION_PATHS[@]} -lt 10 ]; then
  if [ -z "$CLOUDFRONT_DISTRIBUTION_ID" ]; then
    echo "CLOUDFRONT_DISTRIBUTION_ID not set, skipping cache invalidation."
  else
    echo "Running cache invalidation for ${#INVALIDATION_PATHS[@]} paths"
    echo "Invalidating urls: ${INVALIDATION_PATHS[*]}"
    cf=$(aws cloudfront create-invalidation --distribution-id $CLOUDFRONT_DISTRIBUTION_ID --paths "${INVALIDATION_PATHS[@]}")
    echo "Invalidation submitted: $cf"
  fi
else
  echo "Too few or too many invalidation paths (${#INVALIDATION_PATHS[@]}), skipping cache invalidation."
fi

echo "Finished indexing, cleaning up /tmp/$1"
rm -rf /tmp/$1
